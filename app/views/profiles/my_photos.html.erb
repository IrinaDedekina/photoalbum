<div class="card-group">
  <div class="row" style="display: flex;">


    <% @photos.each do |photo| %>
      <div class="col-6 col-md-4 text-center" style="margin: auto">
          <%= image_tag photo.image.url(:medium) %><br>
          <%= photo.description %><br>
          <%= link_to 'Show', photo %>
          <% if photo.user == current_user %>
          | <%= link_to 'Edit', edit_photo_path(photo) %> |
          <%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>

    <% end %>
  </div>
</div>

  <br>
  <% if user_signed_in? %>
  <%= link_to 'New Photo', new_photo_path, class:"btn btn-primary text-center" %>
  <% end %>
</div>
