<div class="container bg-success bg-light p-2 text-dark bg-opacity-10">

  <table>
    <thead>
      <tr>
        <th>Description</th>
        <th>User email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @photos.each do |photo| %>
        <tr>
          <td><%= photo.description %></td>
          <td><%= link_to 'Show', photo %></td>
          <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
          <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
    </tbody>
  </table>

  <br>
  <% if user_signed_in? %>
  <%= link_to 'New Photo', new_photo_path, class:"btn btn-primary" %>
  <% end %>
</div>
