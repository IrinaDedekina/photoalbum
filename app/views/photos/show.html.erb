<div class="container bg-success bg-light p-2 text-dark bg-opacity-10">
  <div class="card-body">
    <p>
      <%= image_tag @photo.image.url(:large), class: "wrap_images" %><br>
      <strong><%= @photo.description %></strong>
      <br>
      <%= @photo.user.name if @photo.user %>

    </p>
    <% if @photo.user == current_user %>
    <%= link_to 'Редактировать', edit_photo_path(@photo) %> |
    <%= link_to 'Удалить', @photo, method: :delete, data: { confirm: t('photos.destroy_confirm') } %> |
    <% end %>
    <%= link_to 'Назад', photos_path %>
  </div>
</div>

